<div class="row">
  <h1>All Actions</h1>

  <%= link_to "Add new action", new_admin_action_item_path %><br>

<div class="col s12">
  <div id="admin-actions">
    <ul>
      <% @action_items.each do |action_item| %>
        <li class="col s12">
          <%= link_to 'X', admin_action_item_path(action_item.id), method: :delete %> <%= action_item.description %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
